<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#494949">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/activity_signup_signupButton">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Create a new account"
                android:padding="10dp"
                android:textColor="@color/colorHeadingGrey"
                android:textSize="20dp"
                android:textStyle="bold">
            </androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/activity_signup_imageView"
                android:layout_gravity="center_horizontal"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/temp_harrypotter"
                android:layout_marginBottom="10dp"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Full name"
                android:textColor="@color/colorHeadingGrey"
                android:textColorHint="#C2C0C0"
                android:id="@+id/activity_signup_nameEditText">
            </androidx.appcompat.widget.AppCompatEditText>

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textColor="@color/colorHeadingGrey"
                android:hint="Email"
                android:textColorHint="#C2C0C0"
                android:id="@+id/activity_signup_emailEditText">
            </androidx.appcompat.widget.AppCompatEditText>

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textVisiblePassword"
                android:hint="Password (atleast 6 characters)"
                android:textColor="@color/colorHeadingGrey"
                android:textColorHint="#C2C0C0"
                android:id="@+id/activity_signup_passwordEditText"
                android:layout_marginBottom="20dp">
            </androidx.appcompat.widget.AppCompatEditText>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/layout_border_background"
                android:padding="10dp"
                android:layout_marginBottom="10dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Education Details"
                    android:textColor="@color/colorHeadingGrey"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp">
                </androidx.appcompat.widget.AppCompatTextView>

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/activity_signup_collegeNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="College Name"
                    android:inputType="text"
                    android:textColor="@color/colorHeadingGrey"
                    android:textColorHint="@color/colorHeadingGrey">
                </androidx.appcompat.widget.AppCompatEditText>

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/activity_signup_courseName_EditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Course Name"
                    android:inputType="text"
                    android:textColor="@color/colorHeadingGrey"
                    android:textColorHint="@color/colorHeadingGrey">
                </androidx.appcompat.widget.AppCompatEditText>

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/activity_signup_graduationYearEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Graduation Year"
                    android:inputType="number"
                    android:textColor="@color/colorHeadingGrey"
                    android:textColorHint="@color/colorHeadingGrey">
                </androidx.appcompat.widget.AppCompatEditText>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/layout_border_background"
                android:padding="10dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Work Details (optional)"
                    android:textColor="@color/colorHeadingGrey"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp">
                </androidx.appcompat.widget.AppCompatTextView>

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/activity_signup_companyNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Company Name"
                    android:inputType="text"
                    android:textColor="@color/colorHeadingGrey"
                    android:textColorHint="@color/colorHeadingGrey">
                </androidx.appcompat.widget.AppCompatEditText>

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/activity_signup_jobProfile_EditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Job Profile"
                    android:inputType="text"
                    android:textColor="@color/colorHeadingGrey"
                    android:textColorHint="@color/colorHeadingGrey">
                </androidx.appcompat.widget.AppCompatEditText>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>



    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:id="@+id/activity_signup_signupButton"
        android:layout_above="@id/activity_signup_loginTextView"
        android:background="@drawable/roundrectangle"
        android:layout_margin="10dp">
    </androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatTextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Already have an account? Log in"
        android:textColor="#E8D9D9EE"
        android:textSize="15dp"
        android:id="@+id/activity_signup_loginTextView"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp">
    </androidx.appcompat.widget.AppCompatTextView>



</RelativeLayout>